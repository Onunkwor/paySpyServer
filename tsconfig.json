{
  "compilerOptions": {
    "outDir": "./build", // Ensure compiled files go to the build folder
    "rootDir": "./src", // Specify where the TypeScript source files are located
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
